Function MouseZoneHit(but, x,y, w,h)
    Return (MouseX() >= x And MouseX() <= x+w-1 And MouseY() >= y And MouseY() <= y+h-1 And MouseHit(but))
End Function


Function TallennaKentt‰(tiedosto$)
    If Left(Lower(tiedosto),7) <> "kent‰t\" and Left(Lower(tiedosto),7) <> "kent‰t/" then tiedosto = "Kent‰t\"+tiedosto
    f = OpenToWrite(tiedosto)
    WriteShort f, "18475" 'tunnus, jolla tiedosto tunnistetaan avattaessa sopivaksi
    WriteString f, EnCrypt2(OhjelmanSalasana,Kent‰nNimi)
    WriteString f, EnCrypt2(OhjelmanSalasana,Kent‰nSalasana)
    WriteString f, EnCrypt2(OhjelmanSalasana,Kent‰nTekij‰)
    WriteByte f, Kentt‰Valmis
    WriteShort f, Peilej‰Korkeintaan
    WriteShort f, S‰deX
    WriteShort f, S‰deY
    WriteShort f, S‰deDir
    WriteByte f, Kent‰nVaikeusaste
    
    For p.Peilit = Each Peilit
        If p\SaaTallentaa Then
            WriteShort f, 1111
            WriteShort f, p\x1
            WriteShort f, p\y1
            WriteShort f, p\x2
            WriteShort f, p\y2
            WriteShort f, p\lukittu
        End If
    Next p
    For m.Kohteet = Each Kohteet
        WriteShort f, 2222
        WriteShort f, m\x
        WriteShort f, m\y
        WriteShort f, m\w
        WriteShort f, m\h
        WriteShort f, m\lukittu
    Next m
    For e.Estoalueet = Each Estoalueet
        WriteShort f, 3333
        WriteShort f, e\x
        WriteShort f, e\y
        WriteShort f, e\w
        WriteShort f, e\h
        WriteShort f, e\lukittu
    Next e
    For ee.Esteet = Each Esteet
        WriteShort f, 4444
        WriteShort f, ee\x1
        WriteShort f, ee\y1
        WriteShort f, ee\x2
        WriteShort f, ee\y2
        WriteShort f, ee\lukittu
    Next ee
    For t.Tekstit = Each Tekstit
        WriteShort f, 5555
        WriteString f, EnCrypt2(OhjelmanSalasana,t\Teksti)
        WriteShort f, t\x
        WriteShort f, t\y
        WriteShort f, t\w
    Next t
    For i = 1 To ToplistaKoko
        WriteShort f, 9999
        WriteString f,EnCrypt2(OhjelmanSalasana,Toplista(i,0))
        WriteString f,EnCrypt2(OhjelmanSalasana,Toplista(i,1))
        WriteString f,EnCrypt2(OhjelmanSalasana,Toplista(i,2))
    Next i
    WriteShort f, 8888 'Muut yksitt‰iset arvot (muista laittaa 8888 joikaista t‰llaista arvoa ennen!)
    WriteShort f, PeilinPituusKorkeintaan 'Ollut mukana ver 1.5 l‰htien
    CloseFile f
End Function

Function AvaaKentt‰(tiedosto$)
    Tyhjenn‰Toplista() 'pyyhit‰‰n vanha toplista pois
    If Left(Lower(tiedosto),7) <> "kent‰t\" and Left(Lower(tiedosto),7) <> "kent‰t/" then tiedosto = "Kent‰t\"+tiedosto
    If Not FileExists(tiedosto) Then MakeError "Map file '"+tiedosto+"' does not exist."
    f = OpenToRead(tiedosto)
    If ReadShort(f) <> "18475" Then MakeError "File '"+tiedosto+"' is not a proper SunBEAM file."
    Kent‰nTiedosto = tiedosto
    Kent‰nNimi = DeCrypt2(OhjelmanSalasana,ReadString(f))
    Kent‰nSalasana = DeCrypt2(OhjelmanSalasana,ReadString(f))
    Kent‰nTekij‰ = DeCrypt2(OhjelmanSalasana,ReadString(f))
    Kentt‰Valmis = ReadByte(f)
    Peilej‰Korkeintaan = ReadShort(f)
    S‰deX = ReadShort(f)
    S‰deY = ReadShort(f)
    S‰deDir = ReadShort(f)
    S‰deOlemassa=True
    Kent‰nVaikeusaste = ReadByte(f)
    While Not EOF(f)
        value = ReadShort(f)
        If value = 1111 Then 'peilit
            x1 = ReadShort(f)
            y1 = ReadShort(f)
            x2 = ReadShort(f)
            y2 = ReadShort(f)
            lukittu = ReadShort(f)
            LuoPeili(x1,y1,x2,y2,lukittu)
        End If
        If value = 2222 Then 'Kohteet
            x = ReadShort(f)
            y = ReadShort(f)
            w = ReadShort(f)
            h = ReadShort(f)
            lukittu = ReadShort(f)
            LuoMaali(x,y,w,h,lukittu)
        End If
        If value = 3333 Then 'Estoalueet
            x = ReadShort(f)
            y = ReadShort(f)
            w = ReadShort(f)
            h = ReadShort(f)
            lukittu = ReadShort(f)
            LuoEstoalue(x,y,w,h,lukittu)
        End If
        If value = 4444 Then 'Esteet
            x1 = ReadShort(f)
            y1 = ReadShort(f)
            x2 = ReadShort(f)
            y2 = ReadShort(f)
            lukittu = ReadShort(f)
            LuoEste(x1,y1, x2,y2, lukittu)
        End If
        If value = 5555 Then 'Tekstit
            teksti$ = DeCrypt2(OhjelmanSalasana,ReadString(f))
            x = ReadShort(f)
            y = ReadShort(f)
            w = ReadShort(f)
            t.Tekstit = New(Tekstit)
            t\Teksti = teksti
            t\x = x
            t\y = y
            t\w = w
        End If
        If value=9999 Then 'Toplista
            nimi$ = DeCrypt2(OhjelmanSalasana,ReadString(f))
            pisteet$ = DeCrypt2(OhjelmanSalasana,ReadString(f))
            pvm$ = DeCrypt2(OhjelmanSalasana,ReadString(f))
            Lis‰‰Toplistaan(nimi,pisteet,pvm)
        End If
        If value=8888 Then 'Muut, yksitt‰iset arvot
            PeilinPituusKorkeintaan = ReadShort(f) 'Ollut mukana ver 1.5 l‰htien
        End If
    Wend
    CloseFile f
    PeilitMuuttuneet=True
    EsteetMuuttuneet=True
    KohteetMuuttuneet=True
    EstoalueetMuuttuneet=True
    KuljettuMatka=0
    TMR_Kentt‰Ladattu=Timer()
End Function

Function Lis‰‰Toplistaan(nimi$, pisteet, pvm$="")
    For i = 1 To ToplistaKoko
        If Int(Toplista(i,1))=pisteet Then Return False 'Sama tulos jo olemassa - hyl‰t‰‰n pistemerkint‰
        If Int(Toplista(i,1))>pisteet Or Int(Toplista(i,1))=0 And sija=0 Then sija=i
    Next i
    For j=ToplistaKoko To sija+1 Step-1
        Toplista(j,0)=Toplista(j-1,0)
        Toplista(j,1)=Toplista(j-1,1)
        Toplista(j,2)=Toplista(j-1,2)
    Next j
    Toplista(sija,0)=nimi
    Toplista(sija,1)=pisteet
    If pvm="" Then pvm=SiistiP‰iv‰m‰‰r‰(Date())
    Toplista(sija,2)=pvm
End Function

Function EnCrypt2(CryptKey$,CryptText$)
    //Lainattu osoitteesta
    //http://www.coolbasic.com/forums/index.php?showtopic=427&st=0&p=3225&#entry3225
    //Tehnyt: Nixe

    Crypted$ = ""
    Eu = 0
    LnKey = Len(CryptKey$)   
    LnText = Len(CryptText$)   
    For Au = 1 To LnText
        Eu = Eu + 1     
        If Eu > LnKey Then Eu = 1
        KeyValue = Asc(Mid(CryptKey$, Eu, 1))
        Value = Asc(Mid(CryptText$, Au, 1)) 
        Value = Value + KeyValue
        If Value > 255 Then Value = Value - 255
        Crypted$ = Crypted$ + Chr(Value)
    Next Au 
    Return Crypted$
End Function

Function DeCrypt2(CryptKey$,CryptText$)
    //Lainattu osoitteesta
    //http://www.coolbasic.com/forums/index.php?showtopic=427&st=0&p=3225&#entry3225
    //Tehnyt: Nixe

    Crypted$ = ""
    Eu = 0
    LnKey = Len(CryptKey$)
    LnText = Len(CryptText$)
    For Au = 1 To LnText
        Eu = Eu + 1
        If Eu > LnKey Then Eu = 1
        KeyValue = Asc(Mid(CryptKey$,Eu,1))
        Value = Asc(Mid(CryptText$,Au,1))
        Value = Value - KeyValue
        If Value < 0 Then Value = Value + 255
        Crypted$ = Crypted$ + Chr(Value)
    Next Au
    Return Crypted$
End Function

