Function LuoPeili(x1,y1,x2,y2,lukittu=0,saatallentaa=1)
    For p.Peilit = Each Peilit
        If p\x1=x1 And p\y1=y1 And p\x2=x2 And p\y2=y2 Then ƒl‰Luo=True
        If p\x1=x2 And p\y1=y2 And p\x2=x1 And p\y2=y1 Then ƒl‰Luo=True
    Next p
    If Not ƒl‰Luo Then
        p.Peilit = New(Peilit)
        p\x1=x1
        p\x2=x2
        p\y1=y1
        p\y2=y2
        p\lukittu=lukittu
        p\SaaTallentaa=saatallentaa
        Peilej‰+1
        If lukittu Then LukittujaOsia+1
        PeilitMuuttuneet=True
    End If
End Function

Function LuoMaali(x,y,w,h,lukittu=0)
    For k.Kohteet = Each Kohteet
        If k\x=x And k\y=y And k\w=w And k\w=w Then ƒl‰Luo=True
    Next k
    If Not ƒl‰Luo Then
        m.Kohteet = New(Kohteet)
        m\x=x
        m\y=y
        m\w=w
        m\h=h
        m\lukittu=lukittu
        Kohteita+1
        If lukittu Then LukittujaOsia+1
        KohteetMuuttuneet=True
    End If
End Function

Function LuoEstoalue(x,y,w,h,lukittu=0)
    For e.Estoalueet = Each Estoalueet
        If e\x=x And e\y=y And e\w=w And e\w=w Then ƒl‰Luo=True
    Next e
    If Not ƒl‰Luo Then
        e.Estoalueet = New(Estoalueet)
        e\x=x
        e\y=y
        e\w=w
        e\h=h
        e\lukittu=lukittu
        Estoalueita+1
        LukittujaOsia=LukittujaOsia+lukittu
        EstoalueetMuuttuneet=True
    End If
End Function

Function LuoEste(x1,y1, x2,y2, lukittu=0)
    For e.Esteet = Each Esteet
        If e\x1=x1 And e\y1=y1 And e\x2=x2 And e\y2=y2 Then ƒl‰Luo=True
        If e\x1=x2 And e\y1=y2 And e\x2=x1 And e\y2=y1 Then ƒl‰Luo=True
    Next e
    If Not ƒl‰Luo Then
        e.Esteet = New(Esteet)
        e\x1=x1
        e\y1=y1
        e\x2=x2
        e\y2=y2
        e\lukittu=lukittu
        LukittujaOsia = LukittujaOsia+lukittu
        Esteit‰+1
        EsteetMuuttuneet=True
