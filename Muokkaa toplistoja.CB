    End If
End Function

Function SiistiP‰iv‰m‰‰r‰(pvm$)
    p=Left(pvm,2)
    k$=Lower(Mid(pvm,4,3))
    v=Right(pvm,4)

    kuukaudet$="janfebmaraprmayjunjulaugsepoctnovdec"
    For i = 1 To Len(kuukaudet) Step 3
        kuu+1
        If k=Mid(kuukaudet,i,3) Then Exit
    Next i

    Return Str(p)+"."+Str(kuu)+"."+Str(v)
End Function

